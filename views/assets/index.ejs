<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hueberry | My Visuals</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/dropdown.css">
</head>
<body>
  <%- include('../partials/header') %>
  
  <div class="container">
    <div class="page-header">My Visuals</div>
    
    <% if (assets && assets.length > 0) { %>
      <div class="asset-grid">
        <!-- TODO: current assets order is LIFO, keep the order but change layout to grid -->
        <% assets.forEach(asset => { %>
          <div class="asset-card" onclick="window.location.href='/assets/<%= asset._id %>'">
            <img src="<%= asset.fileUrl %>" alt="<%= asset.fileName %>">
            <div class="asset-overlay">
              <a href="/assets/<%= asset._id %>" aria-label="View details for <%= asset.fileName %>"></a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <p>No visuals found. <a href="/assets/upload">Upload your first visual</a></p>
      </div>
    <% } %>
  </div>
  
  <%- include('../partials/footer') %>

  <script src="/js/main.js"></script>
</body>
</html>