<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Visuals</title>
  <style></style>
</head>
<body>
  <%- include('../partials/header') %>
  
  <h1>My Visuals</h1>
  
  <% if (assets && assets.length > 0) { %>
    <div class="asset-grid">
      <% assets.forEach(asset => { %>
        <div class="asset-card" onclick="window.location.href='/assets/<%= asset._id %>'">
          <img src="<%= asset.fileUrl %>" alt="<%= asset.fileName || 'Visual asset' %>">
          <div class="asset-overlay">
            <a href="/assets/<%= asset._id %>" aria-label="View details for <%= asset.fileName || 'this asset' %>"></a>
          </div>
          <div class="asset-details">
            <h3><%= asset.fileName || 'Untitled' %></h3>
            <a href="/assets/<%= asset._id %>">View Details</a>
          </div>
        </div>
      <% }) %>
    </div>
    
    <a href="/assets/upload" class="upload-button">Upload New Image</a>
  <% } else { %>
    <div class="empty-state">
      <p>No images found. <a href="/assets/upload">Upload your first image</a></p>
    </div>
  <% } %>
  
  <script src="./js/main.js"></script>
</body>
</html>