<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hueberry | My Visuals</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/dropdown.css">
  <link rel="stylesheet" href="/css/colorAnalysis.css">
</head>
<body>
  <%- include('../partials/header') %>
  
  <div class="container">
    <div class="page-header-container">
      <div class="page-header">My Visuals</div>
      <span class="asset-count-pill"><%= assets ? assets.length : 0 %> visuals</span>
    </div>
    
    <% if (assets && assets.length > 0) { %>
      <div class="asset-grid">

        <a href="/assets/upload" class="asset-card add-visual-btn">
          <div class="add-visual-content">
            <span>+</span>
            <span>Add a visual</span>
          </div>
        </a>
        
        <% assets.forEach(asset => { %>
          <div class="asset-card" onclick="window.location.href='/assets/<%= asset._id %>'">
            <img src="<%= asset.fileUrl %>" alt="<%= asset.fileName %>">
            <div class="asset-overlay">
              <a href="/assets/<%= asset._id %>" aria-label="View details for <%= asset.fileName %>"></a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <p>No visuals found. <a href="/assets/upload">Upload your first visual</a></p>
      </div>
    <% } %>
  </div>
  
  <%- include('../partials/footer') %>

  <script src="/js/main.js"></script>
</body>
</html>
