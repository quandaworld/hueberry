<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hueberry | Upload</title>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/dropdown.css">
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="container">
      <div class="form-container asset-upload">
        
        <div class="image-actions-container">
          <img src="/img/screenshots/visualDemo.png" alt="Visual demo" class="project-demo">
        </div>
        
        <div class="form-content">
          <form action="/assets/upload" method="POST" enctype="multipart/form-data" class="asset-form" id="uploadForm">
            <div class="form-group">
              <div class="form-header">
                <h2 class="page-header">Upload to Hueberry</h2>
              </div>
              <label for="title">File Name</label>
              <input
                type="text"
                id="title"
                name="title"
                value="<%= locals.formData ? formData.title : '' %>"
                required
                placeholder="Enter a title for your image"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <label for="image">Upload Image</label>
              <div class="file-upload-container">
                <input
                  type="file"
                  id="image"
                  name="image"
                  accept="image/jpeg,image/png,image/gif"
                  required
                  class="form-control"
                />
                <div id="preview-container" style="display: none">
                  <img id="image-preview" src="#" alt="Image preview" />
                </div>
              </div>
              <small>Accepted formats: JPG, JPEG, PNG, GIF (Max size: 10MB)</small>
            </div>

            <div class="form-group">
              <label for="project">Project (Optional)</label>
              <select id="project" name="projectId" class="form-control">
                <option value="">-- Select a Project --</option>
                <% if (locals.projects && projects.length > 0) { %>
                  <% projects.forEach(project => { %>
                    <option value="<%= project._id %>"><%= project.name %></option>
                  <% }); %>
                <% } %>
              </select>
            </div>

            <div class="form-group">
              <label for="tags">Tags</label>
              <input
                type="text"
                id="tags"
                name="tags"
                value="<%= locals.formData ? formData.tags : '' %>"
                placeholder="Add tags, separated by commas"
                class="form-control"
              />
              <small>Add tags to make your asset easier to find later</small>
            </div>
          </form>
          
          <div class="form-actions">
            <a href="/assets" class="btn btn-secondary">Cancel</a>
            <button type="submit" form="uploadForm" class="btn btn-primary">Upload to Hueberry</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="/js/main.js"></script>
  </body>
</html>
